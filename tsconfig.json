{
    "compilerOptions": {
        "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,

    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node","wechat-miniprogram","@mini-types/alipay"],
    "rootDir": ".",
      "paths": {
        "@po/*": ["packages/*/src"]
      }
    },
    "include": [
     "packages/global.d.ts",
     "packages/*/src",
  ],
    "exclude": [
      "packages/*/__tests__",
    ]
  }
  